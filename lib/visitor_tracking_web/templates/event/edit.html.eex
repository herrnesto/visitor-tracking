<%= render(VisitorTrackingWeb.LayoutView, "header.html", %{conn: @conn, current_user: @current_user}) %>

<section>
  <div class="container">
    <div class="column">
      <h1 class="title">Veranstaltung bearbeiten</h1>
      <p class="subtitle"><%= @event.name%></p>
      <p class="buttons">
        <a class="button is-link is-outlined" href="<%= Routes.event_path(@conn, :index) %>">
          <span class="icon is-small">
            <i class="fas fa-arrow-left"></i>
          </span>
          <span>ZurÃ¼ck</span>
        </a>
      </p>
    </div>
  </div>
	<div class="container">
	  <div class="column is-4">
	    <%= form_for @changeset, Routes.event_path(@conn, :update, @event), fn f ->	 %>

		    <div class="field">
		      <div class="control">
          <label class="label">Name</label>
            <%= text_input f, :name, class: "input is-medium", autofocus: "true" %>
		      </div>
		     	<p class="help is-danger">
		     		<%= error_tag f, :name %>
		     	</p>
		    </div>

		    <div class="field">
		      <div class="control">
          <label class="label">Veranstaltungsort</label>
            <%= text_input f, :venue, class: "input is-medium" %>
		      </div>
		     	<p class="help is-danger">
		     		<%= error_tag f, :venue %>
		     	</p>
		    </div>

		    <div class="field">
		      <div class="control">
          <label class="label">Besucher Limite</label>
            <%= text_input f, :visitor_limit, class: "input is-medium" %>
		      </div>
		     	<p class="help is-danger">
		     		<%= error_tag f, :visitor_limit %>
		     	</p>
		    </div>

		    <div class="field">
		      <div class="control">
          <label class="label">Start</label>
            <%= datetime_select f, :date_start, class: "select is-medium" %>
		      </div>
		     	<p class="help is-danger">
		     		<%= error_tag f, :date_start %>
		     	</p>
		    </div>

        <%= submit "Veranstaltung speichern", class: "button is-block is-primary is-fullwidth is-medium" %>

      <% end %>
    </div>
  </div>
</section>
