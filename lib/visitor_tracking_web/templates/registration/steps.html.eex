		  <li class="steps-segment has-gaps <%= if @step == 5 do %>is-active<% end %>">
		    <span class="steps-marker is-hollow">
		      <span class="icon">
		        <i class="fa fa-check"></i>
		      </span>
		    </span>
		    <div class="steps-content">
		      <p class="heading">Fertig!</p>
		    </div>
		  </li>
		</ul>
	</div>
</div>
